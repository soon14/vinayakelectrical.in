{{ header }} {{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form" data-toggle="tooltip" title="{{ button_save }} " class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a onclick="location = '{{ cancel }} ';" class="btn btn-default" data-toggle="tooltip">{{ button_cancel }} </a> 
      </div>
      <h1>{{ heading_title }} </h1>

    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb.href }} ">{{ breadcrumb.text }} </a></li>
      {% endfor %} 
     </ul>
  </div>
 </div>
 {% if error_warning %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i>       {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
 {% endif %} 
 
 <div class="container-fluid">
   <div class="panel panel-default">
     <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i>{{ text_edit }}</h3>
     </div>

     <div class="panel-body">
        <form action="{{ action }} " method="post" enctype="multipart/form-data" id="form-cashfree" class="form-horizontal">    
        <div class="form-group required">
        <label class="col-sm-2 control-label" for="payment_cashfree_api_url">{{ entry_api_url }} </label>
        <div class="col-sm-10">
          <input type="text" name="payment_cashfree_api_url" value="{{ payment_cashfree_api_url }} " placeholder="Enter cashfree api url" id="payment_cashfree_api_url" class="form-control" />            
          {% if error_api_url %} 
            <span class="text-danger">{{ error_api_url }} </span>
          {% endif %} 
        </div>
        </div>

        <div class="form-group required">
        <label class="col-sm-2 control-label" for="payment_cashfree_api_url">{{ entry_app_id }} </label>
        <div class="col-sm-10">
          <input type="text" name="payment_cashfree_app_id" value="{{ payment_cashfree_app_id }} " placeholder="Enter cashfree app id" id="payment_cashfree_app_id" class="form-control" />            
          {% if error_app_id %} 
            <span class="text-danger">{{ error_app_id }} </span>
          {% endif %} 
        </div>
        </div>

        <div class="form-group required">
        <label class="col-sm-2 control-label" for="payment_cashfree_secret_key">{{ entry_secret_key }} </label>
        <div class="col-sm-10">
          <input type="text" name="payment_cashfree_secret_key" value="{{ payment_cashfree_secret_key }} " placeholder="Enter cashfree secret key" id="payment_cashfree_secret_key" class="form-control" />            
          {% if error_secret_key %} 
            <span class="text-danger">{{ error_secret_key }} </span>
          {% endif %} 
        </div>
        </div>

        <div class="form-group">
           <label class="col-sm-2 control-label" for="payment_cashfree_order_status_id">{{ entry_order_status }} </label>
           <div class="col-sm-10">
             <select name="payment_cashfree_order_status_id" id="payment_cashfree_order_status_id" class="form-control">
             {% for order_status in order_statuses %} 
               {% if (order_status.order_status_id * 1) == (payment_cashfree_order_status_id * 1) %} 
               <option value="{{ order_status.order_status_id }} " selected="selected">{{ order_status.name }} </option>
               {% else %}   
                <option value="{{ order_status.order_status_id }} ">{{ order_status.name }} </option>
               {% endif %}
             {% endfor %} 
             </select>
        </div>
      </div>
      
       <div class="form-group">
        <label class="col-sm-2 control-label" for="payment_cashfree_status">{{ entry_status }} </label>
        <div class="col-sm-10">
          <select name="payment_cashfree_status" id="payment_cashfree_status" class="form-control">
          {% if payment_cashfree_status %} 
          <option value="1" selected="selected">{{ text_enabled }} </option>
          <option value="0">{{ text_disabled }} </option>
         {% else %}   
           <option value="1">{{ text_enabled }} </option>
           <option value="0" selected="selected">{{ text_disabled }} </option>
             {% endif %}
          </select>
        </div>
       </div>    
       
        <div class="form-group">
          <label class="col-sm-3 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
          <div class="col-sm-9">
            <input type="text" name="payment_cashfree_total" value="{{ payment_cashfree_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-9">
              <select name="payment_cashfree_geo_zone_id" id="input-geo-zone" class="form-control">
                 <option value="0">{{ text_all_zones }}</option>
                  {% for geo_zone in geo_zones %}
                    {% if geo_zone.geo_zone_id == payment_cashfree_geo_zone_id %}
                      <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                    {% else %}
                      <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                    {% endif %}
                  {% endfor %}
              </select>
            </div>
        </div>
 
       <div class="form-group">
       <label class="col-sm-2 control-label" for="payment_cashfree_sort_order">{{ entry_sort_order }} </label>
         <div class="col-sm-10">
           <input type="text" name="payment_cashfree_sort_order" value="{{ payment_cashfree_sort_order }} " placeholder="Enter sort order key" id="payment_cashfree_sort_order" class="form-control" />            
         </div>
      </div>        
      </form>
    </div>
  </div>
</div>
</div>
{{ footer }} 
