{{ header }}
{{ column_left }}
<div id="content">

  {% if error_warning %}
  <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}

  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-html" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
  
	<div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>

      <div class="panel-body">
        
		<form action="{{ form_action }}" method="post" enctype="multipart/form-data" id="form-html" class="form-horizontal">
          
		  <div class="form-group">            
			<label class="col-sm-2 control-label" for="input-name">{{ merchant_id_title }} *</label>
            <div class="col-sm-10">
              <input type="text" name="payment_avantgarde_merchant_id" value="{{ payment_avantgarde_merchant_id }}" placeholder="{{ merchant_id_title }}" id="input-name" class="form-control" />
			</div>
          </div>

		  <div class="form-group">
			<label class="col-sm-2 control-label" for="input-html">{{ merchant_key_title }} *</label>
			<div class="col-sm-10">
              <textarea name="payment_avantgarde_merchant_key" placeholder="{{ merchant_key_title }}" id="input-description" class="form-control">{{ payment_avantgarde_merchant_key }}</textarea>
            </div>
		  </div>
		  
          <div class="form-group">
			<label class="col-sm-2 control-label" for="input-html">{{ aggregator_id_title }} *</label>
			<div class="col-sm-10">
              <input type="text" name="payment_avantgarde_aggregator_id" value="{{ payment_avantgarde_aggregator_id }}" placeholder="{{ aggregator_id_title }}" id="input-name" class="form-control" />
            </div>
		  </div>
		  
          <div class="form-group">
			<label class="col-sm-2 control-label" for="input-html">{{ domain_url_title }} *</label>
			<div class="col-sm-10">
              <input type="text" name="payment_avantgarde_domain_url" value="{{ payment_avantgarde_domain_url }}" placeholder="{{ domain_url_title }}" id="input-name" class="form-control" />
            </div>
		  </div>
		  
          <div class="form-group">
			<label class="col-sm-2 control-label" for="input-html">{{ transaction_method_title }} *</label>
			<div class="col-sm-10">
              <select name="payment_avantgarde_transaction_method" id="input-status" class="form-control">
                {% if payment_avantgarde_transaction_method %}
                  <option value="sale" selected="selected">{{ transaction_method_sale_title }}</option>
                  <option value="auth">{{ transaction_method_auth_title }}</option>
                {% else %}
                  <option value="sale">{{ transaction_method_sale_title }}</option>
                  <option value="auth" selected="selected">{{ transaction_method_auth_title }}</option>
				{% endif %}
              </select>
            </div>
		  </div>
		
		 <div class="form-group">  
			<label class="col-sm-2 control-label" for="input-status">Status *</label>
            <div class="col-sm-10">
              <select name="payment_avantgarde_status" id="input-status" class="form-control">
                {% if payment_avantgarde_status %}
                  <option value="1" selected="selected">Enabled</option>
                  <option value="0">Disabled</option>
                 {% else %}
                  <option value="1">Enabled</option>
                  <option value="0" selected="selected">Disabled</option>
				{% endif %}
              </select>
   			</div>
		  </div>
		</form>

	  </div>
	</div>
    
  </div>
</div>
{{ footer }}