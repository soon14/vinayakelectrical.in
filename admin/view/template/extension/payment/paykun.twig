{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-paykun" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
		<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
			<button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-paykun" class="form-horizontal">
					<ul class="nav nav-tabs">
						<li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="tab-general">

							<div class="form-group">
								<label class="control-label col-sm-3" for="payment_paykun_status">
									<span data-toggle="tooltip" title="{{ entry_status_help }}">{{ entry_status }}</span>
								</label>
								<div class="col-sm-9">
									<select name="payment_paykun_status" class="form-control">
                                        {% if payment_paykun_status %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
                                        {% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
									</select>
								</div>
							</div>

							<div class="form-group required">
								<label class="control-label col-sm-3" for="payment_paykun_merchant_id">
									<span data-toggle="tooltip" title="{{ entry_merchant_id_help }}">{{ entry_merchant_id }}</span>
								</label>
								<div class="col-sm-9">
									<input type="text" name="payment_paykun_merchant_id" id="payment_paykun_merchant_id" value="{{ payment_paykun_merchant_id }}" class="form-control"/>
									{% if error_merchant_id %}
									<div class="text-danger">{{ error_merchant_id }}</div>
									{% endif %}
								</div>
							</div>

							<div class="form-group required">
								<label class="control-label col-sm-3" for="payment_paykun_access_token">
									<span data-toggle="tooltip" title="{{ entry_access_token_help }}">{{ entry_access_token }}</span>
								</label>
								<div class="col-sm-9">
									<input type="text" name="payment_paykun_access_token" id="payment_paykun_access_token" value="{{ payment_paykun_access_token }}" class="form-control"/>
                                    {% if error_access_token %}
										<div class="text-danger">{{ error_access_token }}</div>
                                    {% endif %}
								</div>
							</div>

							<div class="form-group required">
								<label class="control-label col-sm-3" for="payment_paykun_enc_key">
									<span data-toggle="tooltip" title="{{ entry_enc_key_help }}">{{ entry_enc_key }}</span>
								</label>
								<div class="col-sm-9">
									<input type="text" name="payment_paykun_enc_key" id="payment_paykun_enc_key" value="{{ payment_paykun_enc_key }}" class="form-control"/>
									{% if error_enc_key %}
									<div class="text-danger">{{ error_enc_key }}</div>
									{% endif %}
								</div>
							</div>




							<div class="form-group">
								<label class="control-label col-sm-3" for="payment_paykun_order_success_status_id">
									<span data-toggle="tooltip" title="{{ entry_order_success_status_help }}">{{ entry_order_success_status }}</span>
								</label>
								<div class="col-sm-9">
									<select name="payment_paykun_order_success_status_id" id="payment_paykun_order_success_status_id" class="form-control">
                                        {% for order_status in order_statuses %}
                                            {% if order_status['order_status_id'] == payment_paykun_order_success_status_id %}
												<option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                            {% else %}
												<option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                            {% endif %}
                                        {% endfor %}
									</select>
								</div>
							</div>

							<div class="form-group">
								<label class="control-label col-sm-3" for="payment_paykun_order_failed_status_id">
									<span data-toggle="tooltip" title="{{ entry_order_failed_status_help }}">{{ entry_order_failed_status }}</span>
								</label>
								<div class="col-sm-9">
									<select name="payment_paykun_order_failed_status_id" id="payment_paykun_order_failed_status_id" class="form-control">
                                        {% for order_status in order_statuses %}
                                            {% if order_status['order_status_id'] == payment_paykun_order_failed_status_id %}
												<option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                            {% else %}
												<option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                            {% endif %}
                                        {% endfor %}
									</select>
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-3 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
								<div class="col-sm-9">
									<input type="text" name="payment_paykun_sort_order" value="{{ payment_paykun_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
								</div>
							</div>


							<div class="form-group">
								<label class="control-label col-sm-3" for="payment_paykun_log_status">
									<span data-toggle="tooltip" title="{{ entry_status_help }}">{{ entry_status }}</span>
								</label>
								<div class="col-sm-9">
									<select name="payment_paykun_log_status" class="form-control">
                                        {% if payment_paykun_log_status %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
                                        {% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
									</select>
								</div>
							</div>

						</div>

					</div>

				</form>
			</div>

			<div class="panel-footer">
				{% if footer_text %} {{ footer_text }} {% endif %}
			</div>
		</div>
	</div>
</div>
<script type="text/javascript"><!--
var default_callback_url = "{{ default_callback_url }}";

function toggleCallbackUrl(){
	if($("select[name=\"payment_paykun_callback_url_status\"]").val() == "1"){
		$(".callback_url_group").removeClass("hidden");
		$("input[name=\"payment_paykun_callback_url\"]").prop("readonly", false);
	} else {
		$(".callback_url_group").addClass("hidden");
		$("#payment_paykun_callback_url").val(default_callback_url);
		$("input[name=\"payment_paykun_callback_url\"]").prop("readonly", true);
	}
}

$(document).on("change", "select[name=\"payment_paykun_callback_url_status\"]", function(){
	toggleCallbackUrl();
});
toggleCallbackUrl();



$('.date').datetimepicker({pickTime: false});


$(document).ready(function(){
	var active_tab = $(".tab-pane .text-danger").eq(0).parents(".tab-pane").attr("id");
	$("a[href='#"+active_tab+"'").trigger("click");
});

function switchToTab(tab_name){
	$('.nav-tabs a[href="#'+tab_name+'"]').tab('show');
}

//--></script>
{{ footer }}