{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-telr" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div> <!-- pull-right -->
      <h1><i class="fa fa-credit-card"></i> {{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
         <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div> <!-- container-fluid -->
  </div> <!-- page-header -->

  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    <div class="panel-body">
      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-telr" class="form-horizontal">
        <ul class="nav nav-tabs" id="tabs">
          <li class="active"><a href="#tab-conf" data-toggle="tab">Settings</a></li>
          <li><a href="#tab-orders" data-toggle="tab">Order Status</a></li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane active" id="tab-conf">
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="payment_telr_title">{{ entry_title }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_telr_title" value="{{ payment_telr_title }}" placeholder="{{ help_title }}" id="payment_telr_title" class="form-control"/>
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="payment_telr_store">{{ entry_store }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_telr_store" value="{{ payment_telr_store }}" placeholder="{{ help_store }}" id="payment_telr_store" class="form-control"/>
                 {% if error_store %}
                  <div class="text-danger">{{ error_store }}</div>
                 {% endif %}
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="payment_telr_authkey">{{ entry_authkey }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_telr_authkey" value="{{ payment_telr_authkey }}" placeholder="{{ help_authkey }}" id="payment_telr_authkey" class="form-control"/>
                 {% if error_authkey %}
                <div class="text-danger">{{ error_authkey }}</div>
               {% endif %}
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="payment_telr_purdesc">{{ entry_purdesc }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_telr_purdesc" value="{{ payment_telr_purdesc }}" placeholder="{{ help_purdesc }}" id="payment_telr_purdesc" class="form-control"/>
                 {% if error_purdesc %}
                <div class="text-danger">{{ error_purdesc }}</div>
                {% endif %}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_lang }}</label>
              <div class="col-sm-10">
                <select name="payment_telr_lang" class="form-control">
                 {% if payment_telr_lang == 'en' %}
                  <option value="en" selected="selected">{{ lang_en }}</option>
                  <option value="ar">{{ lang_ar }}</option>
                 {% else %}
                  <option value="en">{{ lang_en }}</option>
                  <option value="ar" selected="selected">{{ lang_ar }}</option>
                  {% endif %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_pay_mode }}</label>
              <div class="col-sm-10">
                <select name="payment_telr_pay_mode" class="form-control">
                 {% if payment_telr_pay_mode == '0' %}
                  <option value="0" selected="selected">{{ pay_std }}</option>
                  <option value="2">{{ pay_frm }}</option>
                  {% else %}
                  <option value="0">{{ pay_std }}</option>
                  <option value="2" selected="selected">{{ pay_frm }}</option>
                  {% endif %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_test }}</label>
              <div class="col-sm-10">
                <select name="payment_telr_test" class="form-control">
                  {% if payment_telr_test == 'Yes' %}
                  <option value="Yes" selected="selected">{{ text_test }}</option>
                  <option value="No">{{ text_live }}</option>
                  {% else %}
                  <option value="No" selected="selected">{{ text_live }}</option>
                  <option value="Yes">{{ text_test }}</option>
                  {% endif %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_status }}</label>
              <div class="col-sm-10">
                <select name="payment_telr_status" class="form-control">
                  {% if payment_telr_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                 {% endif %}
                </select>
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="payment_telr_total">{{ entry_total }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_telr_total" value="{{ payment_telr_total }}" placeholder="{{ help_total }}" id="payment_telr_total" class="form-control"/>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_geo_zone }}</label>
              <div class="col-sm-10">
                <select name="payment_telr_geo_zone_id" class="form-control">
                  <option value="0">{{ text_all_zones }}</option>
                 {% for geo_zone in geo_zones %}
                  {% if geo_zone['geo_zone_id'] == payment_telr_geo_zone_id %}
                  <option value="{{ geo_zone['geo_zone_id'] }}" selected="selected">{{ geo_zone['name'] }}</option>
                  {% else %}
                  <option value="{{ geo_zone['geo_zone_id'] }}">{{ geo_zone['name'] }}</option>
                   {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="payment_telr_sort_order">{{ entry_sort_order }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_telr_sort_order" value="{{ payment_telr_sort_order }}" placeholder="{{ help_sort_order }}" id="payment_telr_sort_order" class="form-control"/>
              </div>
            </div>
          </div>
          <div class="tab-pane" id="tab-orders">
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_pend_status }}</label>
              <div class="col-sm-10">
                <select name="payment_telr_pend_status_id" class="form-control">
                  {% for order_status in order_statuses %}
                    {% if order_status['order_status_id'] == payment_telr_pend_status_id %}
                  <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                  {% else %}
                  <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                  {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_comp_status }}</label>
              <div class="col-sm-10">
                <select name="payment_telr_comp_status_id" class="form-control">
                  {% for order_status in order_statuses %}
                    {% if order_status['order_status_id'] == payment_telr_comp_status_id %}
                      <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                    {% else %}
                      <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_void_status }}</label>
              <div class="col-sm-10">
                <select name="payment_telr_void_status_id" class="form-control">
                  {% for order_status in order_statuses %}
                    {% if order_status['order_status_id'] == payment_telr_void_status_id %}
                      <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                    {% else %}
                      <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
          </div> <!-- tab-pane -->
        </div> <!-- tab-content -->
      </form>      
    </div> <!-- panel-body -->
  </div> <!-- container-fluid -->
</div> <!-- content -->
<script type="text/javascript">
  $('#tabs a:first').tab('show');
</script>
{{ footer }}
