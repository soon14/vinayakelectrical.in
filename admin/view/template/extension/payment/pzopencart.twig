<script type="text/javascript">
function routeen()
{
	if( $('input[name=payment_pzopencart_pz_merchant]').val()==="" || $('input[name=payment_pzopencart_pz_salt]').val()==="" || $('input[name=payment_pzopencart_cs_vturl]').val()==="" || $('input[name=payment_pzopencart_cs_access_key]').val()==="" || $('input[name=payment_pzopencart_cs_secret_key]').val()==="")
	   {		   
		   $('input[name=payment_pzopencart_route_cs]').attr("readonly", true);
		   $('input[name=payment_pzopencart_route_pz]').attr("readonly", true);
	   }
	   else {		
	   	   $('input[name=payment_pzopencart_route_cs]').removeAttr("readonly");
		   $('input[name=payment_pzopencart_route_pz]').removeAttr("readonly");
	   }
}

$(document).ready(function() { routeen(); });
$('#form-pzopencart').change(function() { routeen();  });
 
$('#payment_pzopencart_route_pz').bind('change',function() {
	var val = parseInt(this.value,10);	
	if(val > 100)
	{
		$('input[name=payment_pzopencart_route_pz]').val(100);
		$('input[name=payment_pzopencart_route_cs]').val(0);
	}
	else if(val < 0)
	{
		$('input[name=payment_pzopencart_route_pz]').val(0);
		$('input[name=payment_pzopencart_route_cs]').val(100);
	}
	else {
		$('input[name=payment_pzopencart_route_cs]').val(Math.abs(100 - val));	
	}
	
});

$('#payment_pzopencart_route_cs').bind('change',function() {
