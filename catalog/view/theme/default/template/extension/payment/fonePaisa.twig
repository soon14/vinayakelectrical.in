<form action="{{ action_url }}" method="POST" class="form-horizontal" id="fonePaisa_form_redirect">

<input type="hidden" name="msg_name" value="request_payment">
<input type="hidden" name="id" value="{{ id }}">
<input type="hidden" name="merchant_id" value="{{ merchant }}">
<input type="hidden" name="merchant_display" value="{{ merchant_display }}">
<input type="hidden" name="invoice_amt" value="{{ amount }}">
<input type="hidden" name="amount" value="{{ amount }}">
<input type="hidden" name="email" value="{{ email }}">
<input type="hidden" name="mobile_no" value="{{ mobile_no }}">
<input type="hidden" name="callback_url" value="{{ callback_url }}">
<input type="hidden" name="callback_failure_url" value="{{ callback_failure_url }}">
<input type="hidden" name="invoice" value="{{ invoice }}">
<input type="hidden" name="sign" value="{{ hexsign }}">

</form>
<div class="buttons">
  <div class="pull-right">
    <input type="button" value="{{ button_confirm }}" id="button-confirm" class="btn btn-primary" />
  </div>
</div>

<script type="text/javascript"><!--
$('#button-confirm').bind('click', function() {
  $('#fonePaisa_form_redirect').submit();
});
//--></script>